timeLabel.Position = UDim2.new(0, 0, 0.1, 0)
timeLabel.Text = "4:20"
timeLabel.TextSize = 70
timeLabel.TextColor3 = Color3.new(1, 1, 1)
timeLabel.Font = Enum.Font.SourceSansBold
timeLabel.BackgroundTransparency = 1
timeLabel.Parent = lockScreen

local subText = Instance.new("TextLabel")
subText.Size = UDim2.new(1, 0, 0, 20)
subText.Position = UDim2.new(0, 0, 0.22, 0)
subText.Text = "Reckoning Day"
subText.TextColor3 = Color3.new(1, 1, 1)
subText.BackgroundTransparency = 1
subText.Parent = lockScreen

-- 5. Unlock Mechanism
local unlockBtn = Instance.new("TextButton")
unlockBtn.Size = UDim2.new(0.8, 0, 0, 50)
unlockBtn.Position = UDim2.new(0.1, 0, 0.8, 0)
unlockBtn.BackgroundColor3 = Color3.fromRGB(60, 20, 100)
unlockBtn.Text = "Slide to Unlock >"
unlockBtn.TextColor3 = Color3.new(1, 1, 1)
unlockBtn.Parent = lockScreen

local uiCornerBtn = Instance.new("UICorner")
uiCornerBtn.Parent = unlockBtn

-- 6. Main Hub Content
local contentFrame = Instance.new("Frame")
contentFrame.Size = UDim2.new(1, 0, 1, 0)
contentFrame.BackgroundTransparency = 1
contentFrame.Visible = false
contentFrame.Parent = mainFrame

local homeHeader = Instance.new("TextLabel")
homeHeader.Text = "Home"
homeHeader.Size = UDim2.new(0, 100, 0, 50)
homeHeader.Position = UDim2.new(0.05, 0, 0.05, 0)
homeHeader.TextColor3 = Color3.new(1, 1, 1)
homeHeader.Font = Enum.Font.SourceSansBold
homeHeader.TextSize = 35
homeHeader.BackgroundTransparency = 1
homeHeader.Parent = contentFrame

-- Status Indicators
local statusBox = Instance.new("TextLabel")
statusBox.Size = UDim2.new(0.4, 0, 0, 40)
statusBox.Position = UDim2.new(0.05, 0, 0.3, 0)
statusBox.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
statusBox.TextColor3 = Color3.fromRGB(0, 180, 0)
statusBox.Text = "Status: Connected"
statusBox.Parent = contentFrame

local scriptsBox = Instance.new("TextLabel")
scriptsBox.Size = UDim2.new(0.4, 0, 0, 40)
scriptsBox.Position = UDim2.new(0.55, 0, 0.3, 0)
scriptsBox.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
scriptsBox.TextColor3 = Color3.new(0, 0, 0)
scriptsBox.Text = "Scripts: 420"
scriptsBox.Parent = contentFrame

-- 7. Scripts List
local scriptList = {"Glitcher", "Knife", "Krystal Dance", "Link Between Worlds", "2008 anims (remake)", "Fent Zombie", "Killbot V2 (remake)", "--- Hat Drop Scripts ---", "Float", "Fling"}
local scriptMenu = Instance.new("ScrollingFrame")
scriptMenu.Size = UDim2.new(0.9, 0, 0.45, 0)
scriptMenu.Position = UDim2.new(0.05, 0, 0.4, 0)
scriptMenu.CanvasSize = UDim2.new(0, 0, 2, 0)
scriptMenu.Visible = true
scriptMenu.BackgroundTransparency = 0.5
scriptMenu.Parent = contentFrame

local layout = Instance.new("UIListLayout")
layout.Padding = UDim.new(0, 5)
layout.Parent = scriptMenu

for _, name in pairs(scriptList) do
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1, 0, 0, 35)
    btn.Text = name
    btn.BackgroundColor3 = Color3.fromRGB(50, 50, 70)
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.Parent = scriptMenu
end

-- 8. Tool Logic (Equip to Show, Unequip to Hide)
tool.Equipped:Connect(function()
    screenGui.Enabled = true
end)

tool.Unequipped:Connect(function()
    screenGui.Enabled = false
end)

unlockBtn.MouseButton1Click:Connect(function()
    lockScreen.Visible = false
    contentFrame.Visible = true
end)

print("RiptideHub Script Executed: Tool added to inventory.")
