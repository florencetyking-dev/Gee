local Players = game:GetService("Players")
local player = Players.LocalPlayer
local backpack = player:WaitForChild("Backpack")
local playerGui = player:WaitForChild("PlayerGui")

-- 1. Create the Tool in your Inventory
local tool = Instance.new("Tool")
tool.Name = "RiptideHub"
tool.RequiresHandle = false -- No physical part needed for the UI to show
tool.Parent = backpack

-- 2. Create the UI Container
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "RiptideUI"
screenGui.Enabled = false
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-- 3. Main Phone Frame with Gradient Background
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 320, 0, 580)
mainFrame.Position = UDim2.new(0.5, -160, 0.5, -290)
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 20, 50)
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 25)
corner.Parent = mainFrame

-- Apply requested Decal Background (8638932437)
local bgImage = Instance.new("ImageLabel")
bgImage.Size = UDim2.new(1, 0, 1, 0)
bgImage.BackgroundTransparency = 1
bgImage.Image = "rbxassetid://8638932437"
bgImage.Parent = mainFrame

-- 4. Lock Screen Interface (Time: 4:20)
local lockScreen = Instance.new("Frame")
lockScreen.Size = UDim2.new(1, 0, 1, 0)
lockScreen.BackgroundTransparency = 1
lockScreen.Parent = mainFrame

local timeLabel = Instance.new("TextLabel")
