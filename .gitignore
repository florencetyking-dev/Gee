function Library.AddWindowsTab()
    local WinSection = Library.Section("Help")
    WinSection.Title("Windows 11")
    
    local SectionView = PageViewInnerFrame:FindFirstChild("Help")
    if not SectionView then return end

    -- Custom UI Container (Using Scale for Mobile)
    local MainContainer = Instance.new("Frame")
    MainContainer.Name = "WindowsUI"
    MainContainer.Size = UDim2.new(1, 0, 1, 0)
    MainContainer.BackgroundTransparency = 1
    MainContainer.Parent = SectionView
    MainContainer.ZIndex = 100

    -- 1. HOMEPAGE (Lock Screen)
    local Homepage = Instance.new("ImageLabel")
    Homepage.Size = UDim2.new(1, 0, 1, 0)
    Homepage.Image = "rbxassetid://8638932437"
    Homepage.ScaleType = Enum.ScaleType.Crop
    Homepage.ZIndex = 10
    Homepage.Parent = MainContainer

    local TimeLabel = Instance.new("TextLabel")
    TimeLabel.Size = UDim2.new(0.9, 0, 0.2, 0)
    TimeLabel.Position = UDim2.new(0.05, 0, 0.1, 0)
    TimeLabel.BackgroundTransparency = 1
    TimeLabel.Font = Enum.Font.SourceSansLight
    TimeLabel.TextSize = 60 -- Adjusted for mobile
    TimeLabel.TextColor3 = Color3.new(1, 1, 1)
    TimeLabel.TextXAlignment = Enum.TextXAlignment.Center
    TimeLabel.Parent = Homepage

    task.spawn(function()
        while MainContainer.Parent do
            TimeLabel.Text = os.date("%H:%M")
            task.wait(1)
        end
    end)

    -- 2. MAIN PAGE
    local MainPage = Instance.new("Frame")
    MainPage.Size = UDim2.new(1, 0, 1, 0)
    MainPage.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    MainPage.Visible = false
    MainPage.Parent = MainContainer

    -- Profile Pic
    local Pfp = Instance.new("ImageLabel")
    Pfp.Size = UDim2.new(0, 60, 0, 60)
    Pfp.Position = UDim2.new(0.5, -30, 0.1, 0)
    Pfp.Image = "rbxassetid://5263851004"
    Pfp.BackgroundTransparency = 1
    Pfp.Parent = MainPage
    Instance.new("UICorner", Pfp).CornerRadius = UDim.new(1, 0)

    -- List Items
    local function CreateItem(text, yPos)
        local btn = Instance.new("TextButton")
        btn.Size = UDim2.new(0.8, 0, 0, 45)
        btn.Position = UDim2.new(0.1, 0, yPos, 0)
        btn.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
        btn.Text = "  " .. text
        btn.TextColor3 = Color3.new(1, 1, 1)
        btn.Font = Enum.Font.SourceSansBold
        btn.TextSize = 22
        btn.TextXAlignment = Enum.TextXAlignment.Left
        btn.Parent = MainPage
        Instance.new("UICorner", btn)
    end

    CreateItem("Chatlogs", 0.3)
    CreateItem("Scripts", 0.45)
    CreateItem("Credits", 0.6)

    -- 3. MOBILE-FRIENDLY SWIPE BAR
    local SwipeBar = Instance.new("Frame")
    SwipeBar.Size = UDim2.new(0.7, 0, 0, 50)
    SwipeBar.Position = UDim2.new(0.15, 0, 0.8, 0)
    SwipeBar.BackgroundColor3 = Color3.new(0, 0, 0)
    SwipeBar.BackgroundTransparency = 0.6
    SwipeBar.Parent = Homepage
    Instance.new("UICorner", SwipeBar).CornerRadius = UDim.new(0.5, 0)

    local Slider = Instance.new("TextButton")
    Slider.Size = UDim2.new(0.25, 0, 1, 0)
    Slider.BackgroundColor3 = Color3.new(1, 1, 1)
    Slider.Text = ">>>"
    Slider.TextColor3 = Color3.new(0, 0, 0)
    Slider.Parent = SwipeBar
    Instance.new("UICorner", Slider).CornerRadius = UDim.new(0.5, 0)

    -- Swipe Logic
    local dragging = false
    Slider.MouseButton1Down:Connect(function() dragging = true end)
    
    game:GetService("UserInputService").InputChanged:Connect(function(input)
        if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
            local relativeX = (input.Position.X - SwipeBar.AbsolutePosition.X) / SwipeBar.AbsoluteSize.X
            local clampedX = math.clamp(relativeX - 0.125, 0, 0.75)
            Slider.Position = UDim2.new(clampedX, 0, 0, 0)
            
            if clampedX >= 0.7 then
                dragging = false
                Homepage:TweenPosition(UDim2.new(0, 0, -1, 0), "Out", "Quad", 0.4)
                task.wait(0.4)
                MainPage.Visible = true
            end
        end
    end)
    
    game:GetService("UserInputService").InputEnded:Connect(function() dragging = false end)
end

Library.AddWindowsTab()
