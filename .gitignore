function Library.WindowsTab()
    local WinTab = Library.Section("Help") -- Hijacks the Help tab for this view
    WinTab.Title("Windows")

    -- Main Container
    local Container = Instance.new("Frame", PageViewInnerFrame:FindFirstChild("Help"))
    Container.Size = UDim2.new(1, 0, 1, 0)
    Container.BackgroundTransparency = 1
    Container.Name = "WindowsContainer"

    -- 1. HOMEPAGE (Lock Screen)
    local Homepage = Instance.new("ImageLabel", Container)
    Homepage.Size = UDim2.new(1, 0, 1, 0)
    Homepage.Image = "rbxassetid://8638932437"
    Homepage.ZIndex = 10

    local TimeLabel = Instance.new("TextLabel", Homepage)
    TimeLabel.Size = UDim2.new(1, 0, 0, 100)
    TimeLabel.Position = UDim2.new(0, 20, 0, 50)
    TimeLabel.BackgroundTransparency = 1
    TimeLabel.TextColor3 = Color3.new(1, 1, 1)
    TimeLabel.Font = Enum.Font.SourceSansLight
    TimeLabel.TextSize = 80
    TimeLabel.TextXAlignment = "Left"

    -- Clock Update
    task.spawn(function()
        while task.wait(1) do
            TimeLabel.Text = os.date("%H:%M")
        end
    end)

    -- 2. MAIN PAGE
    local MainPage = Instance.new("Frame", Container)
    MainPage.Size = UDim2.new(1, 0, 1, 0)
    MainPage.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    MainPage.Visible = false
    MainPage.ZIndex = 5

    -- Profile Pic
    local ProfilePic = Instance.new("ImageLabel", MainPage)
    ProfilePic.Size = UDim2.new(0, 60, 0, 60)
    ProfilePic.Position = UDim2.new(0, 10, 0, 10)
    ProfilePic.Image = "rbxassetid://5263851004"
    Instance.new("UICorner", ProfilePic).CornerRadius = UDim.new(1, 0)

    -- Content Sections (Chatlogs, Scripts, Credits)
    local function CreateSection(name, pos)
        local lbl = Instance.new("TextLabel", MainPage)
        lbl.Size = UDim2.new(1, -20, 0, 40)
        lbl.Position = pos
        lbl.Text = " > " .. name
        lbl.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
        lbl.TextColor3 = Color3.new(1, 1, 1)
        lbl.Font = Enum.Font.SourceSansBold
        lbl.TextSize = 20
        lbl.TextXAlignment = "Left"
        Instance.new("UICorner", lbl)
    end

    CreateSection("Chatlogs", UDim2.new(0, 10, 0, 80))
    CreateSection("Scripts", UDim2.new(0, 10, 0, 130))
    CreateSection("Credits", UDim2.new(0, 10, 0, 180))

    -- SWIPE TO UNLOCK LOGIC
    local SwipeBar = Instance.new("Frame", Homepage)
    SwipeBar.Size = UDim2.new(0.6, 0, 0, 40)
    SwipeBar.Position = UDim2.new(0.2, 0, 0.8, 0)
    SwipeBar.BackgroundColor3 = Color3.new(0,0,0)
    SwipeBar.BackgroundTransparency = 0.5

    local Slider = Instance.new("TextButton", SwipeBar)
    Slider.Size = UDim2.new(0.2, 0, 1, 0)
    Slider.Text = ">>>"
    Slider.BackgroundColor3 = Color3.new(1,1,1)

    Slider.MouseButton1Down:Connect(function()
        local tween = game:GetService("TweenService"):Create(Homepage, TweenInfo.new(0.5), {Position = UDim2.new(0, 0, -1, 0)})
        tween:Play()
        MainPage.Visible = true
        tween.Completed:Connect(function() Homepage.Visible = false end)
    end)
end
