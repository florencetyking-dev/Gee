-- [[ TIDE HUB: INVENTORY TOOL VERSION ]]
local Players = game:GetService("Players")
local Player = Players.LocalPlayer
local Backpack = Player:WaitForChild("Backpack")
local TideVersion = "1.0.5 BETA"

-- [[ 1. CREATE THE TOOL ]]
local TideTool = Instance.new("Tool")
TideTool.Name = "Tide Hub"
TideTool.RequiresHandle = false
TideTool.TextureId = "rbxassetid://12523447385" -- Custom Tide Icon
TideTool.Parent = Backpack

-- [[ 2. UI SETUP (Hidden by default) ]]
local ScreenGui = Instance.new("ScreenGui", Player:WaitForChild("PlayerGui"))
ScreenGui.Name = "TideUI"
ScreenGui.Enabled = false
ScreenGui.ResetOnSpawn = false

local MainFrame = Instance.new("Frame", ScreenGui)
MainFrame.Size = UDim2.new(0, 300, 0, 400)
MainFrame.Position = UDim2.new(0.5, -150, 0.5, -200)
MainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
MainFrame.BorderSizePixel = 0
Instance.new("UICorner", MainFrame)

-- [[ 3. PIXEL TITLE ]]
local Title = Instance.new("TextLabel", MainFrame)
Title.Size = UDim2.new(1, 0, 0, 50)
Title.Text = "TIDE HUB"
Title.TextColor3 = Color3.fromRGB(0, 200, 255)
Title.Font = Enum.Font.Code
Title.TextSize = 25
Title.BackgroundTransparency = 1

-- [[ 4. TOOL LOGIC (Toggle UI on Equip) ]]
TideTool.Equipped:Connect(function()
    ScreenGui.Enabled = true -- Opens menu when you select the tool
end)

TideTool.Unequipped:Connect(function()
    ScreenGui.Enabled = false -- Closes menu when you deselect
end)

-- [[ 5. FUNCTIONAL BUTTONS ]]
local function CreateBtn(txt, yPos, callback)
    local b = Instance.new("TextButton", MainFrame)
    b.Size = UDim2.new(0.8, 0, 0, 40)
    b.Position = UDim2.new(0.1, 0, 0, yPos)
    b.Text = txt
    b.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    b.TextColor3 = Color3.new(1, 1, 1)
    b.Font = Enum.Font.SourceSansBold
    Instance.new("UICorner", b)
    b.MouseButton1Click:Connect(callback)
end

CreateBtn("SPEED HACK", 100, function() 
    Player.Character.Humanoid.WalkSpeed = 100 
end)

CreateBtn("RESET SPEED", 150, function() 
    Player.Character.Humanoid.WalkSpeed = 16 
end)

CreateBtn("CLOSE HUB", 330, function()
    ScreenGui.Enabled = false
end)
